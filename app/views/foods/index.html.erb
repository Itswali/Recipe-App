<div class="food-list-container">
  <h1>Food list for <%= @user.name %></h1>

  <% @foods.each do |food| %>
    <div class="food-item">
      <p><%= food.name %> (Quantity: <%= food.quantity %>, price: <%= food.price %>$, Measuring Unit: <%= food.measuring_unit %>)</p>
      <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: 'Are you sure you want to delete this food item?' }, class: "delete-button" %>
    </div>
  <% end %>

  <div class="back-link-container">
    <%= link_to 'Back', session.delete(:return_to) || root_path, class: "back-link" %>
  </div>
</div>
